                <CheckBox
                    android:id="@+id/hancock_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/JohnHancock" />


                <TextView
                    android:id="@+id/correctfive_text_view"
                    style="@style/hiddenAnswer"
                    android:text="@string/Answer" />

                <CheckBox
                    android:id="@+id/madison_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:text="@string/JamesMadison" />

                <TextView
                    android:id="@+id/wrongten_text_view"
                    style="@style/hiddenAnswer"
                    android:text="@string/Answer" />

                <CheckBox
                    android:id="@+id/adams_checkbox"
                    android:layout_width="wrap_content"
