                    style="@style/historyQuestion"
                    android:text="@string/questionSeven" />

                <EditText
                    android:id="@+id/editTextBonus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/bonusQuestion" />


                <TextView
                    android:id="@+id/bonus_text_view"
                    style="@style/hiddenAnswer"
                    android:text="@string/bonus" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <Button
                        android:id="@+id/reset_button_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="16dp"
                        android:onClick="resetAnswer"
                        android:text="@string/Reset" />

                    <Button
                        android:id="@+id/answer_button_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginTop="16dp"
                        android:onClick="submitAnswer"
                        android:text="@string/Submit" />

                    <TextView
                        android:id="@+id/results_text_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:text="@string/Results"
                        android:textAppearance="?android:attr/textAppearanceLarge" />
