                    android:id="@+id/President"
                    style="@style/historyQuestion"
                    android:text="@string/questionOne" />


                <CheckBox
                    android:id="@+id/lincoln_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

